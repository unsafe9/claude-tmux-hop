{
  "name": "claude-tmux-hop",
  "description": "Track Claude Code sessions in tmux for quick navigation",
  "version": "0.1.0",
  "author": {
    "name": "unsafe9"
  },
  "repository": "https://github.com/unsafe9/claude-tmux-hop",
  "license": "MIT",
  "keywords": ["tmux", "navigation", "sessions"],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx claude-tmux-hop init"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx claude-tmux-hop register --state active"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion|ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "uvx claude-tmux-hop register --state waiting"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "uvx claude-tmux-hop register --state waiting"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx claude-tmux-hop register --state idle"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx claude-tmux-hop clear"
          }
        ]
      }
    ]
  }
}
