#!/usr/bin/env bash
# CLI wrapper for claude-tmux-hop
# Uses the local project directory derived from script location

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

export PYTHONPATH="$PROJECT_ROOT/src:$PYTHONPATH"
exec python3 -m claude_tmux_hop "$@"
